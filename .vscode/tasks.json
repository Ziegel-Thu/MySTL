{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build&run",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "-arch",
                "arm64",
                "-o",
                "${workspaceFolder}/main",
                "${workspaceFolder}/main.cpp",
                "&&${workspaceFolder}/main"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++14",
                "-stdlib=libc++",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-arch",
                "arm64",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}